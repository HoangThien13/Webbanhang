@model IEnumerable<Webbanhang.DataAccess.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h2 class="mb-4">Danh sách danh mục</h2>

<a asp-action="Add" class="btn btn-success mb-3">Thêm danh mục</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
